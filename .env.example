# Secret Santa WhatsApp Application - Environment Variables
# Copy this file to .env and configure with your actual values

# Application Settings
SECRET_KEY=change-this-to-a-random-secret-key-for-production
DEBUG=false
PORT=5000

# Database Configuration  
DATABASE_URL=postgresql://secret_santa:password@db:5432/secret_santa_db

# WhatsApp Business API Configuration
# Get these from your Meta Developer Console
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_ACCESS_TOKEN=your-whatsapp-business-api-token-here
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id-here

# Organizer Contact (for support/admin purposes)
DEFAULT_SENDER_EMAIL=organizer@yourdomain.com

# Redis Configuration (for session storage)
REDIS_URL=redis://redis:6379/0

# Production Settings
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=120